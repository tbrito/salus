<div class="modal-content" ng-controller="tipoDocumentoConfigController" ng-init="carregarFormulario()">
    <div>Configurações > Tipos de Documentos</div>

    <div class="control-group">
        <button class="btn btn-primary" name="novoTipo" ng-click="adicionar()">Novo Tipo de Documento</button>
    </div>

    <div class="control-group" style="height:560px; overflow:auto">
        <table ng-show="tiposDeDocumento.length > 0" class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Pasta</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tr ng-class="{'item-inativo': tipoDocumento.Ativo == false}" ng-repeat="tipoDocumento in tiposDeDocumento">
                <td>{{tipoDocumento.Nome}}</td>
                <td>{{tipoDocumento.Parent.Nome}}</td>
                <td><a ng-click="editarTipoDocumento(tipoDocumento.Id)">Editar</a></td>
                <td>
                    <a ng-if="tipoDocumento.Ativo" ng-click="excluir(tipoDocumento)">Desativar</a>
                    <a ng-if="tipoDocumento.Ativo==false" ng-click="ativar(tipoDocumento)">Ativar</a>    
                </td>
            </tr>
        </table>
    </div>
</div>