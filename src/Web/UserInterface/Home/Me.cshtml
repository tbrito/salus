<div ng-controller="homeController" ng-init="carregarFormulario(null)">

    <div  style="width: 98%; height: 530px; overflow-y: scroll;">
        <div>Minha Caixa</div>
        <div ng-show="fluxos.length == 0">
            Sem documentos na caixa
        </div>
        <table ng-show="fluxos.length > 0" class="table">
            <thead>
                <tr>
                    <th>Documento</th>
                    <th>De</th>
                    <th>Assunto</th>
                    <th>Mensagem</th>
                    <th>Desde</th>
                </tr>
            </thead>
            <tr ng-repeat="fluxo in fluxos" ng-click="abrirDocumento(fluxo)">
                <td>{{fluxo.Documento.Id}}</td>
                <td>{{fluxo.De.Nome}}</td>
                <td>{{fluxo.Documento.Assunto}}</td>
                <td>{{fluxo.Mensagem}}</td>
                <td>{{fluxo.CriadoEm}}</td>
            </tr>
        </table>
    </div>
</div>
