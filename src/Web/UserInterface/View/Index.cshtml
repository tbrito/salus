<div ng-controller="viewController" ng-init="abrir()" snap-toggle>

    <snap-drawers snap-toggle>
        <snap-drawer style="top:50px; height:300px">
            <div class="panel panel-default">
                <div class="panel-heading">Indexacao</div>
                <div class="panel-body" ng-repeat="index in indexacao">
                        <span><b>{{index.Chave.Nome}}:</b> {{index.Valor}}</span>
                </div>
            </div>
        </snap-drawer>

        <snap-drawer style="top:350px;height:250px">
            <div class="panel panel-default">
                <div class="panel-heading">Alterar Assunto</div>
                <div class="panel-body">
                    <input type="text" ng-model="assunto" />
                    <button ng-click="salvarAssunto()">Salvar</button>
                </div>
            </div>
        </snap-drawer>
        <snap-drawer style="top:500px">
            <div class="panel panel-default">
                <div class="panel-heading">Versões</div>
                <div class="panel-body"  ng-repeat="versao in versoes">
                    <span><b>{{versao.Versao}}:</b> {{versao.CriadoEm}}</span>
                </div>
            </div>
        </snap-drawer>
    </snap-drawers>
    <div style="height:600px;width:auto; padding-left:130px">
        <div class="panel panel-warning">
            <div><b>Documento:</b> {{documentoId}}</div>
        </div>
        <div ng-if="error==undefined">
            <iframe ng-src="{{urlDocumento}}" style="width:100%;height:100%;border:solid;overflow:auto"></iframe>
        </div>
        <div ng-if="error!=undefined">
            <div style="width:100%;height:100%;border:solid;overflow:auto">
                {{error}}
            </div>
        </div>
    </div>
</div>