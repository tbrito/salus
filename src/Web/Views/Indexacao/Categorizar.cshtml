@using Salus.Model.Entidades
@model Documento

<div ng-controller="categorizacaoController" ng-init="carregarFormulario(@this.Model.Id)">

    <div class="panel-heading">
        <form name="categorizacaoForm">
            <div>Categorizando documento {{indexacao.DocumentoId}}</div>

            <div class="input-group input-group-lg">
                <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                
                <select class="form-control" ng-model="indexacao.tipoDocumento" ng-options="tipodocumento.nome for tipodocumento in tiposDeDocumento" ng-change="selecionarTipo()">
                    <option value="">Selecione o tipo do documento</option>
                </select>
            </div>

            <div class="form-group" ng-repeat="chave in chaves" @*ng-class="{ 'has-error' : categorizacaoFieldForm.email.$invalid }"*@>
                <ng-form name="categorizacaoFieldForm">
                    <label>{{ chave.name }}</label>
                    <input type="text" class="form-control" name="email" ng-model="indexacao.valor" required>
                    @*<p class="help-block" ng-show="categorizacaoFieldForm.email.$invalid">Valid Email Address Required</p>*@
                </ng-form>
            </div>
        </form>
    </div>
</div>
